<Window x:Class="WolfInSheepsClothing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WolfInSheepsClothing"
        mc:Ignorable="d"
        Title="Wilk i Owce" Width="1600" Height="900">
    <Grid>
        <Canvas Name="MyCanvas" Background="LightGreen">
        </Canvas>
        <Button Name="StartBtn" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Click="StartButton_Click"/>
        <TextBox Name="EndText" TextWrapping="Wrap" Text="Game Over! All sheep have been caught by the wolf." Width="300" VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Collapsed" />
    </Grid>
</Window>
